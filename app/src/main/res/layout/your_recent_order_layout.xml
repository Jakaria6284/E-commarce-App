<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:elevation="8dp"
    android:layout_margin="4dp"
    android:background="@drawable/slider_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="Your Recent Order"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/recent_order_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:paddingRight="8dp"
       android:paddingBottom="8dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/order_status_image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/man"
            app:civ_border_color="@color/md_blue_900"
            app:civ_border_width="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/order_status_image3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/man"
            app:civ_border_color="@color/md_blue_900"
            app:civ_border_width="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/order_status_image2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/man"
            app:civ_border_color="@color/md_blue_900"
            app:civ_border_width="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/order_status_image1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/man"
            app:civ_border_color="@color/md_blue_900"
            app:civ_border_width="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>